</head>

<body>

  <%- include("assets/pages/nav"); %>
    <div class="submenu">
      <h2>Agendar Consulta Médica</h2>
      <form action="/agendamento" method="post" id="consultas">

        <input id="username" name="username" value="<%=req.session.name%>" required><br>

        <input placeholder="Ex: exemplo@email.com" oninput="validarEmail(this)" type="text" name="email" id="email" required><br>

        <input placeholder="Horário" type="date" name="date" id="date" required><br>

        <input placeholder="" type="time" id="horario" name="horario" required><br>

        <select id="medico" name="medico" required>
          <option value="">Selecione um Departamento/Médico</option>
          <option value="Doctor Who">Cardiologia/Doctor Who</option>
          <option value="Elizabeth Schimidt">Neurologia/Elizabeth Schimidt</option>
          <option value="Bonnie Fazbear">Fisioterapia/Bonnie Fazbear</option>
          <option value="Milena Shokan">Pediatria/Milena Shokan</option>
          <option value="Walter White">Oncologia/Walter White</option>
          <option value="Miguel Tiradentes">Odontologia/Miguel Tiradentes</option>
          <option value="Fátima dos Santos">Ginecologia/Fátima dos Santos</option>
        </select><br>

        <input placeholder="Descreva alguma observação" onclick="alertinput()" type="informacoesamais"
          id="informacoesamais" name="informacoesamais"><br>

        <button type="submit">Agendar</button>
      </form>
      <%- include("assets/pages/preloader"); %>
        <script src="assets/js/functions.js"></script>
</body>

</html>